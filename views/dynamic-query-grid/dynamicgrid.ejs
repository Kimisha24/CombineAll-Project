<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dynamic grid coman </title>
    <style>
        form {
            margin: 200px auto;
            text-align: center;
        }

        table {
            /* height: 100px; */
            /* width: 100%; */
            border: 1px solid black;
            border-collapse: collapse;
            margin: 50px auto;
        }

        td {
            border: 1px solid black;
            border-collapse: collapse;
            text-align: center;
            /* font-size: 20px; */
            padding: 10px;
        }

        th {
            /* font-size: 20px; */
            background-color: lightblue;
            border: 1px solid black;
            border-collapse: collapse;
            text-align: center;
        }
    </style>
</head>

<body>

    <h2>24DEV098:KIMISHA</h2>

    <form action="/dynamicquerygrid/?page=1" method="get">
        <label for="subquery">Query :</label>
        <input type="text" id="subquery" size="50px" name="subquery">
        <input type="submit" value="submitquery">
    </form>
    <% if(result.length !=0){ %>
        <div>
            <%- include('./partials/componant',{p,last}) %>
        </div>

        <table>
            <thead>
                <tr>
                    <% for(let i=0; i<element.length ; i++){ %>
                        <th>
                            <%= element[i] %>
                        </th>
                        <% }%>
                </tr>
            </thead>

            <tbody>
                <% for(let i=0; i<result.length; i++){ %>
                    <tr>
                        <% for(let j=0; j<element.length; j++){ %>
                            <td>
                                <%= result[i][element[j]] %>
                            </td>
                            <% } %>
                    </tr>
                    <% } %>
            </tbody>

        </table>
        <% } %>

</body>

</html>