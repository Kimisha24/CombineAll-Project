<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student order list</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
        integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />

    <style>
        table {
            /* height: 80%; */
            width: 100%;
            border: 1px solid black;
            border-collapse: collapse;
            margin: auto auto;
        }

        td {
            border: 1px solid black;
            border-collapse: collapse;
            text-align: center;
            font-size: 15px;
        }

        th {
            font-size: 15px;
            background-color: lightblue;
            border: 1px solid black;
            border-collapse: collapse;
            text-align: center;
            width: 60px;
        }

        h2 {
            text-align: center;
        }

        form {
            text-align: center;
            margin-top: 10px;
            margin-bottom: 15px;
        }

        input {
            font-size: 15px;
            padding: 10px;
        }

        a {
            text-decoration: none;
            color: black;
        }

        .box {
            display: flex;
        }

        .right {
            float: right;
        }
    </style>

</head>

</head>

<body>

    <h2> Student order list </h2>
    <div>
        <%- include('./partials/componant',{order, page ,column}) %>
    </div>

    <!-- <form action="">
        <input type="search" name="search" placeholder="search here">
        <input type="submit" value="Go!">
    </form> -->

    <table>
        <tr>

            <th> <a href="/col-order-pagi/?select=stu_id&sort=<%= column === 'stu_id' && order === 'asc' ? 'desc' : 'asc' %>">

                    ID</a>
                <div class="right">

                    <% if ( column==='stu_id' && order !=='asc' ){ %>
                        <i class="fa-solid fa-angle-down" style="color: red;"></i>
                        <% } else{ %>
                            <i class="fa-solid fa-angle-up"></i>
                            <% }%>
                </div>
            </th>


            <th> <a href="/col-order-pagi/?select=f_name&sort=<%= column === 'f_name' && order === 'asc' ? 'desc' : 'asc' %>">
                    Firstname</a>
                <div class="right">

                    <% if ( column==='f_name' && order !=='asc' ){ %>
                        <i class="fa-solid fa-angle-down" style="color: red;"></i>
                        <% } else{ %>
                            <i class="fa-solid fa-angle-up"></i>
                            <% }%>
                </div>
            </th>
            <th><a href="/col-order-pagi/?select=l_name&sort=<%= column === 'l_name' && order === 'asc' ? 'desc' : 'asc' %>">
                    Lastname</a>
                <div class="right">

                    <% if ( column==='l_name' && order!=='asc' ){ %>
                        <i class="fa-solid fa-angle-down" style="color: red;"></i>
                        <% } else{ %>
                            <i class="fa-solid fa-angle-up"></i>
                            <% }%>
                </div>
            </th>
            <th><a href="/col-order-pagi/?select=email&sort=<%= column === 'email' && order === 'asc' ? 'desc' : 'asc' %>">
                    Email</a>
                <div class="right">
                    <% if ( column==='email' && order!=='asc' ){ %>
                        <i class="fa-solid fa-angle-down" style="color: red;"></i>
                        <% } else{ %>
                            <i class="fa-solid fa-angle-up"></i>
                            <% }%>
                </div>
            </th>
            <th><a href="/col-order-pagi/?select=course&sort=<%= column === 'course' && order === 'asc' ? 'desc' : 'asc' %>">
                    course</a>
                <div class="right">

                    <% if ( column==='course' && order!=='asc' ){ %>

                        <i class="fa-solid fa-angle-down" style="color: red;"></i>
                        <% } else{ %>
                            <i class="fa-solid fa-angle-up"></i>
                            <% }%>

                </div>
            </th>
            <th><a href="/col-order-pagi/?select=contact_no&sort=<%= column === 'contact_no' && order === 'asc' ? 'desc' : 'asc' %>">
                    Phone no</a>
                <div class="right">
                    <% if ( column==='contact_no' && order!=='asc' ){ %>
                        <i class="fa-solid fa-angle-down" style="color: red;"></i>
                        <% } else{ %>
                            <i class="fa-solid fa-angle-up"></i>
                            <% }%>

                </div>
            </th>
            <th><a href="/col-order-pagi/?select=birth_date&sort=<%= column === 'birth_date' && order === 'asc' ? 'desc' : 'asc' %>">
                    birth_date</a>
                <div class="right">

                    <% if ( column==='birth_date' && order !=='asc' ){ %>
                        <i class="fa-solid fa-angle-down" style="color: red;"></i>
                        <% } else{ %>
                            <i class="fa-solid fa-angle-up"></i>
                            <% }%>

                </div>
            </th>
            <th><a href="/col-order-pagi/?select=age&sort=<%= column === 'age' && order === 'asc' ? 'desc' : 'asc' %>">age</a>
                <div class="right">

                    <% if ( column==='age' && order!=='asc' ){ %>

                        <i class="fa-solid fa-angle-down" style="color: red;"></i>
                        <% } else{ %>
                            <i class="fa-solid fa-angle-up"></i>
                            <% }%>
                </div>
            </th>
            <th><a href="/col-order-pagi/?select=gender&sort=<%= column === 'gender' && order === 'asc' ? 'desc' : 'asc' %>">Gender</a>
                <div class="right">

                    <% if ( column==='gender' && order !=='asc' ){ %>
                        <i class="fa-solid fa-angle-down" style="color: red;"></i>
                        <% } else{ %>
                            <i class="fa-solid fa-angle-up"></i>
                            <% }%>
                </div>
            </th>
            <th><a
                    href="/col-order-pagi/?select=relationship_status&sort=<%= column === 'relationship_status' && order === 'asc' ? 'desc' : 'asc' %>">relationship_status</a>
                <div class="right">
                    <% if ( column==='relationship_status' && order !=='asc' ){ %>

                        <i class="fa-solid fa-angle-down" style="color: red;"></i>
                        <% } else{ %>
                            <i class="fa-solid fa-angle-up"></i>
                            <% }%>
                </div>
            </th>
            <th><a href="/col-order-pagi/?select=city&sort=<%= column === 'city' && order === 'asc' ? 'desc' : 'asc' %>">city</a>

                <div class="right">
                    <% if ( column==='city' && order !=='asc' ){ %>

                        <i class="fa-solid fa-angle-down" style="color: red;"></i>
                        <% } else{ %>
                            <i class="fa-solid fa-angle-up"></i>
                            <% }%>
                </div>
            </th>
            <th><a href="/col-order-pagi/?select=state&sort=<%= column === 'state' && order === 'asc' ? 'desc' : 'asc' %>">state</a>
                <div class="right">
                    <% if ( column==='state' && order !=='asc' ){ %>
                        <i class="fa-solid fa-angle-down" style="color: red;"></i>
                        <% } else{ %>
                            <i class="fa-solid fa-angle-up"></i>
                            <% }%>
                </div>
            </th>
            <th><a
                    href="/col-order-pagi/?select=Country&sort=<%= column === 'Country ' && order === 'asc' ? 'desc' : 'asc' %>">Country</a>
                <div class="right">
                    <i class="fa-solid fa-angle-up"></i>
                    <i class="fa-solid fa-angle-down"></i>
                </div>
            </th>

            <th><a
                    href="/col-order-pagi/?select=created_at&sort=<%= column === 'created_at ' && order === 'asc' ? 'desc' : 'asc' %>">created_at</a>
                <div class="right">
                    <i class="fa-solid fa-angle-up"></i>
                    <i class="fa-solid fa-angle-down"></i>
                </div>
            </th>
        </tr>

        <% data.forEach((item)=>{%>

            <tr>

                <td>
                    <%=item.stu_id %>
                </td>
                <td>
                    <%=item.f_name %>
                </td>

                <td>
                    <%= item.l_name %>
                </td>
                <td>
                    <%= item.email%>
                </td>
                <td>
                    <%= item.course %>
                </td>
                <td>
                    <%= item.contact_no %>
                </td>
                <td>
                    <%= item.birth_date %>
                </td>
                <td>
                    <%= item.age %>
                </td>
                <td>
                    <%= item.gender %>
                </td>
                <td>
                    <%= item.relationship_status %>
                </td>
                <td>
                    <%= item.city %>
                </td>
                <td>
                    <%= item.state %>
                </td>
               <td>
                    <%= item.Country %>
                </td>
                <td>
                    <%= item.created_at %>
                </td> 


            </tr>

            <%});%>

    </table>


</body>

</html>