<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student searching list</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
        integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />

    <style>
        table {
            /* height: 80%; */
            width: 100%;
            border: 1px solid black;
            border-collapse: collapse;
            margin: auto auto;
        }

        td {
            border: 1px solid black;
            border-collapse: collapse;
            text-align: center;
            font-size: 15px;
        }

        th {
            font-size: 15px;
            background-color: lightblue;
            border: 1px solid black;
            border-collapse: collapse;
            text-align: center;
            width: 60px;
        }

        h2 {
            text-align: center;
        }

        form {
            /* text-align: center; */
            margin-top: 10px;
            margin-bottom: 15px;
        }

        input {
            font-size: 13px;
            padding: 5px;
        }

        a {
            text-decoration: none;
            color: black;
        }

        .box {
            display: flex;
        }

        .right {
            float: right;
        }

        .searching {
            margin-bottom: 10px;
        }
    </style>




</head>

</head>

<body>

    <h2> Student order list </h2>
    <div class="pagination">
        <%- include('./partials/componant'),{page} %>

    </div>


    <form action="/list" method="get">
        <input type="search" name="search_id" id="search_id" placeholder="search here student ID" tabindex="0"
            autofocus>
        <input type="submit" value="Go!" tabindex="2">
    </form>

    <div class="searching">
        <%- include('./partials/search') %>
    </div>


    <table>
        <tr>

            <th> ID</th>
            <th> Firstname</th>
            <th>Lastname</th>
            <th>Email</th>
            <th>course</th>
            <th>Phone no</th>
            <th>birth_date</th>
            <th>Age</th>
            <th>Gender</th>
            <th>relationship_status </th>
            <th>City </th>
            <th> state</th>

        </tr>

        <% data.forEach((item)=>{%>

            <tr>

                <td>
                    <%=item.stu_id %>
                </td>
                <td>
                    <%=item.f_name %>
                </td>

                <td>
                    <%= item.l_name %>
                </td>
                <td>
                    <%= item.email%>
                </td>
                <td>
                    <%= item.course %>
                </td>
                <td>
                    <%= item.contact_no %>
                </td>
                <td>
                    <%= item.birth_date %>
                </td>
                <td>
                    <%= item.age %>
                </td>
                <td>
                    <%= item.gender %>
                </td>
                <td>
                    <%= item.relationship_status %>
                </td>
                <td>
                    <%= item.city %>
                </td>
                <td>
                    <%= item.state %>
                </td>



            </tr>

            <%});%>

    </table>



</body>

</html>